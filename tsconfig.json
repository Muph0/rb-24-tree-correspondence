{
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,

    "compilerOptions": {
        "target": "es6",
        "module": "AMD",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "mapRoot": "",
        "sourceRoot": "../src/",
        //"outDir": "./js/"
        "outFile": "./js/main.js"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
